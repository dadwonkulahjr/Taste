@page
@model Taste.Pages.Customer.Home.IndexModel
@{
    ViewData["Title"] = "Customer Home";
}


@foreach (var category in Model.CustomerHomeVM.ListOfCategorieItems)
{
    if (Model.CustomerHomeVM.ListOfMenuItems.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success pl-1"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var menuItems in Model.CustomerHomeVM.ListOfMenuItems.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                        <div class="card" style="border:2px solid #008cba;border-radius:5px;">
                                                <div class="pl-3 pt-1 text-center">
                                                    <div class="card-title text-primary">
                                                        <b>
                                                            @menuItems.Name
                                                        </b>
                                                    </div>
                                                    <div class="d-flex justify-content-between form-control" style="border:0px;">
                                                        <div class="badge col-6 badge-warning text-center"
                                                             style="font-size:14px;">
                                                            @menuItems.Category.Name
                                                        </div>
                                                        <div class="col-6 text-right h5" style="color:maroon">
                                                            @menuItems.Price.ToString("c")
                                                        </div>
                                                    </div>
                                                    <img src="@menuItems.Image" class="card-img-top pt-2 rounded" asp-append-version="true"/>

                                                    <a asp-page="Details" class="btn btn-primary btn-block" asp-route-id="@menuItems.Id" style="border-radius:2px;">
                                                        Details
                                                    </a>
                                                </div>
                                        </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {

    }

}