@page
@model Taste.Pages.Admin.MenuItem.IndexModel
@{
    ViewData["Title"] = "Menu Items";
}

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Menu Item List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-page="/Admin/MenuItem/Upsert" class="btn btn-primary"><i class="fas fa-plus">&nbsp;Create New</i></a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Food Type</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{

    <script src="~/js/menuitem.js"></script>
    <partial name="_ValidationScriptsPartial" />


}