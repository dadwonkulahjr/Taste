@page

@model Taste.Pages.Admin.Category.UpsertModel
@{
    if (Model.CategoryObj.Id != 0)
    {
        ViewData["Title"] = "Edit Category";
    }
    else
    {
        ViewData["Title"] = "Create Category";
    }
}

<form method="post">
    <div class="container">

        @if (Model.CategoryObj.Id != 0)
        {
            <input type="hidden" asp-for="@Model.CategoryObj.Id" />
        }
        <div class="row px-2 mx-2 backgroundWhite border">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.CategoryObj.Id != 0 ? "Edit Category": "Create Category")</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="CategoryObj.Name" class="form-control" placeholder="Category Name..." />
                        <span asp-validation-for="CategoryObj.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryObj.DisplayOrder"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="CategoryObj.DisplayOrder" class="form-control" />
                        <span asp-validation-for="CategoryObj.DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">
                                    @(Model.CategoryObj.Id != 0 ? "Update" : "Create") 
                                </button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</form>
